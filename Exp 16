import cv2
import numpy as np

# Read image
img = cv2.imread("image2.png")
gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)

# Laplacian mask with negative center
laplacian_mask = np.array([[0, 1, 0],
                           [1, -4, 1],
                           [0, 1, 0]])

# Apply mask
laplacian = cv2.filter2D(gray, -1, laplacian_mask)

# Sharpen image = original - laplacian result
sharpened = cv2.subtract(gray, laplacian)

# Display results
cv2.imshow("Original Image", gray)
cv2.imshow("Sharpened Image", sharpened)

cv2.waitKey(0)
cv2.destroyAllWindows()
