# Load the image (assuming the same image_path as before)
image_path = '/content/Screenshot 2025-12-17 125718.png'
img = cv2.imread(image_path)

# Check if the image was loaded successfully
if img is None:
    print(f"Error: Could not load image from {image_path}")
else:
    # Define a kernel for dilation (e.g., a 5x5 ellipse kernel)
    kernel = cv2.getStructuringElement(cv2.MORPH_ELLIPSE, (5, 5))

    # Apply dilation
    dilated_img = cv2.dilate(img, kernel, iterations=1)

    # Display the original and the dilated image
    plt.figure(figsize=(10, 5))

    plt.subplot(1, 2, 1)
    plt.imshow(cv2.cvtColor(img, cv2.COLOR_BGR2RGB))
    plt.title('Original Image')
    plt.axis('off')

    plt.subplot(1, 2, 2)
    plt.imshow(cv2.cvtColor(dilated_img, cv2.COLOR_BGR2RGB))
    plt.title('Dilated Image')
    plt.axis('off')

    plt.show()
